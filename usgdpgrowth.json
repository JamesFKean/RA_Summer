{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/JamesFKean/RA_Summer/main/USGDPv1.csv"
    },
    "config": {
      "style": {"cell": {"stroke": "transparent"}},
      "locale": {
        "number": {
          "decimal": ".",
          "thousands": ",",
          "grouping": [3],
          "currency": ["$", "T"]
        }
      }
    },
    "title": {
      "text": "US GDP by Quarter: is the post Covid surge over?",
      "subtitle": ["Source: FRED"],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 11,
      "fontSize": 16,
      "anchor": "start",
      "color": "#676A86",
      "font": "Circular Std",
      "subtitleFont": "Circular Std",
      "subtitleColor": "#676A86"
    },
    "transform": [{"calculate": "(datum.GDP)/1000", "as": "gdp2"}],
    "vconcat": [
      {
        "width": 500,
        "height": 200,
        "layer": [{
        "data": {
          "values": [
            {
              "image": "https://raw.githubusercontent.com/EconomicsObservatory/ECOvisualisations/main/guidelines/logos/eco-icon-dark.png"
            }
          ]
        },
        "mark": {
          "type": "image",
          "height": 40,
          "opacity": 0.5,
          "width": 40,
          "xOffset": 200, 
          "yOffset": 30
          
        },
        "encoding": {
          "x": {"value": 175},
          "y": {"value": -20},
          "url": {"field": "image", "type": "nominal"}
        }
      },
          {"mark": {"type": "line", "strokeWidth": 0.7, "color": "#36b7b4"}},
          {
            "mark": {
              "type": "area",
              "color": {
                "gradient": "linear",
                "stops": [
                  {"color": "#ffffff", "offset": 0},
                  {"color": "#7ecfd4", "offset": 0.8}
                ],
                "x1": 1,
                "y1": 1,
                "x2": 1,
                "y2": 0
              },
              "strokeWidth": 2
            }
          },
          {
            "params": [
              {
                "name": "hover",
                "select": {
                  "type": "point",
                  "fields": ["Date"],
                  "nearest": true,
                  "on": "mouseover",
                  "clear": "mouseout"
                }
              }
            ],
            "mark": {"type": "rule"},
            "encoding": {
              "y": null,
              "opacity": {
                "condition": {"value": 0.3, "param": "hover", "empty": false},
                "value": 0
              },
              "tooltip": [
                {
                  "field": "Date",
                  "type": "temporal",
                  "title": "Date",
                  "format": "%B %Y"
                },
                {
                  "field": "Growth",
                  "format": ".1%",
                  "type": "quantitative",
                  "title": "Quarterly Growth"
                }
              ]
            }
          },
          {
            "mark": {"type": "circle", "color": "#36b7b4", "size": 50},
            "encoding": {
              "opacity": {
                "condition": {"value": 1, "param": "hover", "empty": false},
                "value": 0
              }
            }
          }
        ],
        "encoding": {
          "x": {
            "field": "Date",
            "type": "temporal",
            "axis": {
              "grid": false,
              "domainColor": "#919ae4",
              "domainOpacity": 0.5,
              "labelAngle": 0,
              "labelColor": "#676A86",
              "labelOpacity": 0.7,
              "orient": "bottom",
              "tickColor": "#676A86",
              "tickCount": 10,
              "tickOpacity": 0.5,
              "title": "",
              "titleAlign": "center",
              "titleAnchor": "middle",
              "titleColor": "#676A86",
              "titleFontSize": 12,
              "titleOpacity": 0.8,
              "titleX": 207,
              "titleY": -15
            }
          },
          "y": {
            "field": "gdp2",
            "type": "quantitative",
            "axis": {
              "domainColor": "#676A86",
              "domainOpacity": 0.5,
              "format": "$",
              "gridColor": "#676A86",
              "gridDash": [1, 5],
              "gridOpacity": 0.5,
              "labelColor": "#676A86",
              "labelOpacity": 0.7,
              "labelPadding": 5,
              "tickColor": "#676A86",
              "tickCount": 8,
              "tickOpacity": 0.5,
              "ticks": false,
              "title": null,
              "titleAlign": "left",
              "titleAngle": 0,
              "titleBaseline": "bottom",
              "titleColor": "#676A86",
              "titleFontSize": 16,
              "titleFont": "Circular Std",
              "titleOpacity": 0.8,
              "titleX": 0,
              "titleY": -18
            }
          }
        }
      },
      {
        "width": 500,
        "height": 200,
        "layer": [
          {
            "params": [
              {
                "name": "hover",
                "select": {
                  "type": "point",
                  "fields": ["Date"],
                  "nearest": true,
                  "on": "mouseover",
                  "clear": "mouseout"
                }
              }
            ],
            "mark": {"type": "bar"},
            "encoding": {
              "x": {
                "field": "Date",
                "type": "temporal",
                "axis": {
                  "grid": false,
                  "domainColor": "#919ae4",
                  "domainOpacity": 0.5,
                  "labelAngle": 0,
                  "labelColor": "#676A86",
                  "labelOpacity": 0.7,
                  "orient": "bottom",
                  "tickColor": "#676A86",
                  "tickCount": 10,
                  "tickOpacity": 0.5,
                  "title": "",
                  "titleAlign": "center",
                  "titleAnchor": "middle",
                  "titleColor": "#676A86",
                  "titleFontSize": 12,
                  "titleOpacity": 0.8,
                  "titleX": 207,
                  "titleY": -15
                }
              },
              "y": {
                "field": "Growth",
                "type": "quantitative",
                "axis": {
                  "domainColor": "#676A86",
                  "domainOpacity": 0.5,
                  "format": "%",
                  "gridColor": "#676A86",
                  "gridDash": [1, 5],
                  "gridOpacity": 0.5,
                  "labelColor": "#676A86",
                  "labelOpacity": 0.7,
                  "labelPadding": 5,
                  "tickColor": "#676A86",
                  "tickCount": 8,
                  "tickOpacity": 0.5,
                  "ticks": false,
                  "title": "Growth Rate",
                  "titleAlign": "left",
                  "titleAngle": 0,
                  "titleBaseline": "bottom",
                  "titleColor": "#676A86",
                  "titleFontSize": 16,
                  "titleFont": "Circular Std",
                  "titleOpacity": 0.8,
                  "titleX": 0,
                  "titleY": -18
                }
              },
              "color": {"value": "#7ecfd4"},
              "tooltip": [
                {
                  "field": "Date",
                  "type": "temporal",
                  "title": "Date",
                  "format": "%B %Y"
                },
                {"field": "Growth", "format": ".2%"}
              ]
            }
          },
          {
            "mark": {"type": "bar"},
            "encoding": {
              "x": {"field": "Date", "type": "temporal"},
              "opacity": {
                "condition": {"param": "hover", "empty": false, "value": 0.3},
                "value": 0
              }
            }
          }
        ]
      },
      {"mark": {"type": "line"}, "encoding": {}}
    ],
    "autosize": {"type": "pad", "contains": "padding", "resize": true}
  }